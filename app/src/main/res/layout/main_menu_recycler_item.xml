<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_150sdp"
    android:layout_gravity="center"
    android:padding="@dimen/_5sdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_20sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_main_menu_recycler_item_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/original_parts"
            android:src="@drawable/img_main_menu_car"
            android:scaleType="centerCrop" />
        <TextView
            android:id="@+id/tv_main_menu_recycler_item_tittle"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_70sdp"
            android:text="@string/original_parts"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:gravity="center_vertical|start"
            android:background="@drawable/item_main_menu_bg"/>

        <TextView
            android:id="@+id/tv_main_menu_recycler_item_description"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_70sdp"
            android:paddingStart="@dimen/_5sdp"
            android:paddingEnd="@dimen/_5sdp"
            android:text="Каталоги от производителя"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp"
            android:paddingTop="@dimen/_40sdp"
            android:gravity="center_vertical|start" />


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>